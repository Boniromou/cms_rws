<h1>Deposit</h1>

<table id="slip" width="800" frame="box">
  <tr height="40"></tr>
  <tr>
    <td width="10%">Amount:</td>
    <td width="40%"><%= to_display_amount_str(@transaction[:amount]) %></td>
    <td width="10%">Member ID:</td>
    <td width="40%"><%= @transaction[:member_id] %></td>
  </tr>
  <tr>
    <td></td>
    <td></td>
  </tr>
</table>

<button id="print_slip">Print</button>

<script type='text/javascript'>
  $('#print_slip').click(function() {
    var w = window.open();
    var html = $("#slip").html();

    $(w.document.body).html(html);
    w.print();

    return false;
  });
</script>
