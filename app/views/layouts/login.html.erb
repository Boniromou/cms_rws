<!DOCTYPE html>
<html id="extr-page">
  <head>
    <%= render partial: "shared/login_head" %>
  </head>
  
  <body class="animated fadeInDown">
    <header id="header">
			<span id="extr-page-header-space">
        <%= yield :header %>
      </span>
		</header>

    <%= javascript_include_tag "login" %>
    
		<div id="main" role="main">
			<!-- ap_main_content -->
			<div id="content" class="container">
        <div class="row">
          <div class="col-xs-6">
            <div class='jumbotron' align='center' style='font-size: 1.5em;'>
              <div id="cage_info">
                <%= render partial: "shared/cage_info" %>
              </div>
            </div>
          </div>
        

				
          <div class="col-xs-6">
						<div class="well no-padding">
							<%= yield %>
              <%= render partial: "shared/flash_message", flash: flash %>
              <!--%= debug(params) if Rails.env.development? %-->
						</div>
					</div>
				</div>
			</div>
		</div>
	</body>
</html>
