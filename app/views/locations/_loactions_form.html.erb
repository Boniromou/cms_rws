<div class="jarviswidget jarviswidget-color-blueDark" id="wid-id-2" data-widget-editbutton="false">
  <header>
    <span class="widget-icon"> <i class="fa fa-table"></i> </span>
  </header>
  <div>
    <div class="widget-body no-padding">
      
        <div id="locations_form">
          <table id="datatable_col_reorder<%=number%>" class="table table-striped table-bordered table-hover" width="100%" height="100%">
            <thead>
              <th><%= t("location.id")%></th>
              <th><%= t("location.name")%></th>
              <th><%= t("location.updated_at")%></th>
              <th><%= t("location.operations")%></th>
            </thead>
            <tbody>
              
              <% @locations.each do |location| %>
                <% if location.status == status %>
                  <tr id="location_<%= location.id %>">         
                  <td><%= location.id %></td>
                    <td><%= location.name %></td>
                    <td><%= location.updated_at %></td>
                    <td>
                      <% if policy(Location.new).change_status? %>
                        <% if status %>
                          <%= link_to '', disable_locations_path + "?location_id=#{location.id}", :id => "disable_location", :class => "glyphicon glyphicon-off", :method => "post", :remote => true, data: { confirm: 'Are you sure?' } %> </td>
                        <% else %>
                          <%= link_to '', enable_locations_path + "?location_id=#{location.id}", :id => "enable_location", :class => "glyphicon glyphicon-repeat", :method => "post", :remote => true, data: { confirm: 'Are you sure?' } %> </td>
                          <% end %>

                      <% end %>
                    </td>
                  </tr>
                <% end %>
              <% end %>
              <tr>
                <%= form_tag(new_locations_path, :remote => true, :id => "search_form", :autocomplete => "off") do %>
                <td></td>
                
                <td><%= text_field_tag(:"name", @name, autofocus: true) %></td>
                <td></td>
                <td>
                 <%= submit_tag t("button.search"), :id => "search", :class => "btn btn-primary" %>   
                  
                   

                  </td>
                  <% end %>
              </tr>
            </tbody>
          </table>
        </div>
       
     
    </div>
  </div>
</div>




<%= javascript_include_tag "pagination" %>