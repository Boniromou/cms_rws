          <% p policy(Location.new).add? %>
          <% if @status == 'active' && policy(Location.new).add? %>
            <%= form_tag(add_location_path, :remote => true, :id => "search_form", :autocomplete => "off", :method => "post") do %>
              <%= text_field_tag :location_name %>                  
              <%= submit_tag t("button.add"), :class => "btn btn-primary", :id => "add_location_submit"  %>
            <% end %>

          <% end %>
          <table id="datatable_col_reorder" class="table table-striped table-bordered table-hover" width="100%" height="100%">
            <thead>
              <th><%= t("location.id")%></th>
              <th><%= t("location.name")%></th>
              <th><%= t("station.updated_at")%></th>
              <th><%= t("station.operation")%></th>
            </thead>
            <tbody>
              <% locations.each do |location| %>
                <tr id="location_<%= location.id %>">
                  <td><%= location.id %></td>
                  <td><%= location.name %></td>
                  <td><%= format_time(location.updated_at) %></td>
                  <td>
                    <% if policy(Location.new).disable? %>
                      <% if @status == 'active' %>
                        <%= link_to 'Disable', disable_locations_path + "?location_id=#{location.id}", :id => "disable_location_#{location.id}", :class => "btn btn-primary", :method => "post", :remote => true, data: { confirm: 'Are you sure?' } %> </td>
                      <% else %>
                        <%= link_to 'Enable', enable_locations_path + "?location_id=#{location.id}", :id => "enable_location_#{location.id}", :class => "btn btn-primary", :method => "post", :remote => true, data: { confirm: 'Are you sure?' } %> </td>
                      <% end %>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>

             <script>
            $(document).ready(function() {
         

           $('#location_name').keyup(function(){
            $("#add_location_submit").attr("disabled", false);
            
            if (!$("#location_name").val().match(/\S/))
            {
              $("#add_location_submit").attr("disabled", true);
            }
             
          

       });
      });
            </script>
