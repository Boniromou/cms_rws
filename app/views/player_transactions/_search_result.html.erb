<div class="jarviswidget jarviswidget-color-blueDark" id="wid-id-2" data-widget-editbutton="false">
  <header>
    <span class="widget-icon"> <i class="fa fa-table"></i> </span>
      <h2>Search Result </h2>
  </header>
  <div>
    <div class="widget-body no-padding">
      <% if @player_transactions.length > 0 %>
        <table id="datatable_col_reorder" class="table table-striped table-bordered table-hover" width="100%" height="100%">
          <tr>
            <thead>
              <th>Transaction ID</th>
              <th>Player Name</th>
              <th>Member ID</th>
              <th>Accounting Date</th>
              <th>Date</th>
              <th>Shift</th>
              <th>Location</th>
              <th>Employee ID</th>
              <th>Status</th>
              <th>Deposit</th>
              <th>Withdrawal</th>
              <th>Action</th>
            </thead>
          </tr>
          <% @player_transactions.each do |t| %>
            <tr>
              <% shift = Shift.find_by_id(t.shift_id) %>
              <% player = Player.find_by_id(t.player_id) %>
              <% user = User.find_by_id(t.user_id) %>
              <td><%= t.id %></td>
              <td><%= player.player_name %></td>
              <td><%= player.member_id %></td>
              <td><%= shift.accounting_date%></td>
              <td><%= format_time(t.created_at) %></td>
              <td><%= shift.name %></td>
              <td><%= current_station %></td>
              <td><%= user.employee_id %></td>
              <td><%= t.status %></td>
              <td><%= t.deposit_amt_str %></td>
              <td><%= t.withdrawal_amt_str %></td>
              <td><%= button_to t("button.print"), reprint_path + "?transaction_id=#{t.id}", :id => "reprint", :method => "get", :remote => true %> </td>
            </tr>
          <% end %>
        </table>
      <% else %>
        <p> no result </p>
      <% end %>
    </div>
  </div>
</div>

