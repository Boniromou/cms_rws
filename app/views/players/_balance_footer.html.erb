<% if policy(PlayerTransaction.new).deposit? %>
  <%= link_to t("button.deposit"), fund_in_path + "?member_id=#{@player.member_id}" , :title => t("button.deposit"), :remote => true, :id => "balance_deposit", :class => "btn btn-primary" %>
<% end %>
<% if policy(PlayerTransaction.new).withdraw? %>
  <%= link_to t("button.withdrawal"), fund_out_path + "?member_id=#{@player.member_id}" , :title => t("button.withdrawal"), :remote => true, :id => "balance_withdraw", :class => "btn btn-primary" %>
<% end %>
