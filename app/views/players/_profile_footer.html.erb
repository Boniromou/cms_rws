<% if policy(Player.new).edit? %>
  <%= link_to t("button.edit"), edit_path + "?member_id=#{@player.member_id}" , :title => t("button.edit"), :remote => true, :id => "edit_player", :class => "btn btn-primary" %>
<% end %>

<% if !@player.account_locked? %>
  <% if policy(Player.new).lock? %>
    <%= render partial: 'players/lock_player_form' %>
  <% end %>
<% else %>
  <% if policy(Player.new).unlock? %>
    <%= render partial: 'players/unlock_player_form' %>
  <% end %>
<% end %>
