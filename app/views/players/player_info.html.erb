<% if @operation == 'balance' %>
  <%= bread_crumb("fa fa-bank",t("tree_panel.fund_management"),t("tree_panel.balance")) %>
<% else %>
  <%= bread_crumb("glyphicon glyphicon-user",t("tree_panel.player_management"),t("tree_panel.profile")) %>
<% end %>

<% if @inactivate %>
  <% footer = render "players/inactivate_footer" %>
<% else %>
  <% footer = render "players/#{@operation}_footer" %>
<% end %>

<% content = render "players/balance_amt" %>

  <div style="width:100%; margin:0 auto; _display:inline-block;">
    <% if policy(:PlayerTransaction).search? %>
      <div id = "div1" style= "width:650px; float:right;"><%= render partial:"player_transactions/search_form" , :locals => {:search_by_history => false} %>
      </div>
    <% end %>
    <div id = "div2" style= "margin-right:10px;"><%= render partial:"shared/player_info" , :locals => {:show_info => true, :show_balance => true, :content => content,     :footer => footer, :show_remain => {:deposit => true, :withdraw => true}} %>
    </div>
    <div id="player_transactions_result">
    </div>
  </div>



