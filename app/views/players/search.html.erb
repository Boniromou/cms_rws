<%= bread_crumb("fa fa-bank",t("tree_panel.fund_management"),t(@search_title)) %>
<%= form_for :player,:remote => true, :url =>{:action => :do_search, :operation => @operation}, :html => { autocomplete: :off }  do |f| %>
  <fieldset>
    <div class="row">
      <div class="col-sm-3">
        <section class="smart-form">
          <div class="inline-group">
            <label class="radio">
              <input type="radio" id="card_id" name="id_type" value="card_id" <%= checked="checked" if @id_type != "member_id" %>>
              <i>
              </i>
              <%= t("general.card_id") %>
            </label>
            <label class="radio">
              <input type="radio" id="member_id" name="id_type" value="member_id" <%= checked="checked" if @id_type == "member_id" %>>
              <i>
              </i>
              <%= t("general.member_id") %>
            </label>
          </div>
        </section>
      </div>

      <div class="col-sm-4">
        <section class="smart-form">
          <label class="input">
            <%= text_field_tag(:"id_number", @id_number) %>
          </label>
        </section>
      </div>
      <%= content_tag(:button, create_icon("fa fa-fw fa-search fa-lg"), :class => "btn btn-primary", :id=> "button_find")%>
    </div>
    
  </fieldset>
<% end %>

<br/>
<% if @found == "false" %>
  <%= content_tag :div, :class => "alert #{bootstrap_class_for(:alert)} fade in" do %>
    <button class="close" data-dismiss="alert">Ã—</button>
    <div id="message_content">
      <%= t("search_error.not_found") %>
      <% if policy(Player.new).create? %>
        <%= t("search_error.create_player")%>
        <%= link_to "create", new_player_path + "?#{@id_type}=#{@id_number}", :remote => true, :class => "btn btn-warning"%>
      <% end %>
    </div>
  </div>
  <% end %>
<% end %>
