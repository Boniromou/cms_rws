<p><%= current_cage_location_str %></p>
<p><%= render 'shared/current_accounting_date_widget' %></p>
<p><%= render 'shared/current_shift_widget' %></p>
<p id="local_date_time"></p>

<%= javascript_include_tag "date.time.helper.js" %>

<script>
  function updateInfo() {
    var localDateTimeStr = getDateTimeStr();

    $('#local_date_time').html(localDateTimeStr);

    setTimeout(updateInfo, 1000);
  }

  updateInfo();
</script>
