<div id="capsLockWarning" class="warning note note-error" style="display: none; color: #C7254E;"><i class="fa fa-warning"></i><%= t("alert.caps_lock") %></div>

<script type="text/javascript">
  function isCapsLockOn(e) {
    var keyCode = e.keyCode ? e.keyCode : e.which;
    var shiftKey = e.shiftKey ? e.shiftKey : ((keyCode == 16) ? true : false);
    return (((keyCode >= 65 && keyCode <= 90) && !shiftKey) || ((keyCode >= 97 && keyCode <= 122) && shiftKey))
  }

  function showCapsLockMsg(e) {
	var warningElement = document.getElementById('capsLockWarning');
		if (isCapsLockOn(e))
			warningElement.style.display = 'block';
		else
			warningElement.style.display = 'none';
	}

	document.getElementById('user_password').onkeypress = function (e) {
		e = e || window.event;
		showCapsLockMsg(e);
	}
</script>
