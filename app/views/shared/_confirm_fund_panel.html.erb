<div id="button_set">
  <%= close_to_balance %>
  <% pop_up_btn :id => "confirm_#{@action}", :str => t("button.confirm"), :form_id => "fund_request", :style => "confirm_fund_btn", :form_valid_function => "formValid()" do %>
    <p><%= t("deposit_withdrawal."+@action+"_amt") %></p>
    <p style="font-size: 18px;" id="fund_amt"></p>
    <% if @action == 'withdraw' %>
      <form class="form-horizontal">
        <div class="form-group">
            <label for="inputPIN" class="col-sm-5 control-label" id="pin_label"><strong>PIN:</strong></label>
            <div class="col-sm-3">
              <%= text_field_tag 'player_transaction[pin]', nil, :form => "fund_request", :type => "password" %>
            </div>
        </div>
      </form>
    <% end %>
  <% end %>
</div>

<%= javascript_include_tag "format.number.js" %>
<script type='text/javascript'>
  function updateConfirmAmt(){
    amt = $('#player_transaction_amount').val()
    $('#pop_up_content #fund_amt').text(formatNum(amt));
  }

  function formValid(){
    amt = $('#player_transaction_amount').val().replace(/0+[.]?/,"");
    return amt != ""
  }

  function showError(){
    $("label.invisible_error").css('visibility', 'visible');
  }

  function hideError(){
    $("label.invisible_error").css('visibility', 'hidden');
  }

  $('#confirm_deposit, #confirm_withdraw, #confirm_credit_deposit, #confirm_credit_expire').click(function() {
    if( formValid()){
      hideError();
            
      updateConfirmAmt();
    } else {
      showError();
    }

    return false;
  });
</script>
