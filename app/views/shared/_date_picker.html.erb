
                    <div class="col-sm-6">
                      <label><%= t("search_form.accounting_date") %></label>
                      <div class="form-group">
                        <div class="input-group">
                          <input class="form-control" name="accounting_date" id="accounting_date" type="text" placeholder="" value="<%= Time.now.strftime("%Y-%m-%d") %>">
                          <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                        </div>
                      </div>
                    </div>
                    

                    <script>
                      // Date Range Picker
                      $("#accounting_date").datepicker({
                        //defaultDate: "+1w",
                        changeMonth: true,
                        dateFormat: "yy-mm-dd",
                        numberOfMonths: 1,
                        prevText: '<i class="fa fa-chevron-left"></i>',
                        nextText: '<i class="fa fa-chevron-right"></i>',
                        onClose: function (selectedDate) {
                            $("#to").datepicker("option", "minDate", selectedDate);
                        }
                      });
                    </script>
