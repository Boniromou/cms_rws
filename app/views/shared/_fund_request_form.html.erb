<%=form_for :player_transaction, url: fund_request_path, remote: true, html: { id: "fund_request", autocomplete: :off  } do |f| %>
  <div>
    <%= hidden_field(:player, :member_id) %>
  </div>

  <div>
    <%= f.label :amount, t("deposit_withdrawal.amount") + ": " %>
    <%= f.text_field :amount, required: true, pattern: '^\d+(\.\d{1,2})?$', :id => "player_transaction_amount", :oninput => "return ValidateFloat($(this),value)" %><br/>
  </div>
<% end %>
