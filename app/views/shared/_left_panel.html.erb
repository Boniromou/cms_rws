<!-- END NAVIGATION -->
<style type="text/css">
.unlink{
  cursor: default;
}
.unlink:active{
  background: #3a3633!important;
}
.unlink:hover{
  color: #a8a8a8;
}
</style>

<script type='text/javascript'>
  $("li ul li").attr("onclick","ActiveOption(event)");
  $("li#nav_home").attr("onclick","ActiveOption(event)");

  function ActiveOption(e){
    RemoveActiveOption();
    target = e.target;
    while(target!=null && target.nodeName!= "LI"){
      target = target.parentNode
    }
    $(target).addClass("active");
  }

  $(document).ready(function(){
    function changeHomeBackground(){
      if ($("body").hasClass('desktop-detected pace-done minified')) {
         document.getElementById('nav_home').style.background = 'rgba(69,69,69,0.6)';
         document.getElementById('nav_home').style.padding =  '7px 0';
      } else {
        document.getElementById('nav_home').style.background = '';
        document.getElementById('nav_home').style.padding =  '';
      }
    }

    $("#miniMenu").click(function(){
      setTimeout(changeHomeBackground(), 3000);
    });

    $('#home_link').mouseover(function(){
      $('#home_link').css("background-color","rgba(70,70,70,1)");
    });

    $('#home_link').mouseleave(function(){
      $('#home_link').css("background-color","rgba(69,69,69,0)");
    });

    $("a").click(function(){
      document.getElementById('flash_message').style.display = 'block';
      document.getElementById('flash_message').className = '';
      document.getElementById('flash_message').style.marginLeft = '';
    });
  });

  function RemoveActiveOption(){
    $("li ul li").removeClass("active");
    $("li#nav_home").removeClass("active");
  }
</script>
