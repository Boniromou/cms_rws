<article class="col-xs-12 col-sm-12 col-md-12 col-lg-6">
  <div class="jarviswidget jarviswidget-color-blueDark jarviswidget-sortable" id="wid-id-12" data-widget-colorbutton="false" data-widget-togglebutton="false" data-widget-editbutton="false" data-widget-fullscreenbutton="false" data-widget-deletebutton="false" role="widget">
    <header role="heading">
      <span class="widget-icon"> <i class="glyphicon glyphicon-user"></i> </span>
      <h2>
        <strong><%= label_tag :player_full_name, @player.full_name.upcase , :id => "player_full_name" %></strong>
      </h2>       
      <div class="widget-toolbar" role="menu">
        <%= back_button %>
      </div>
      <span class="jarviswidget-loader"><i class="fa fa-refresh fa-spin"></i></span></header>
      <div role="content">
        <div class="jarviswidget-editbox">
        </div>
      <div class="widget-body">
        <div class="row">
          <label class="col-xs-3 box"><strong><%= t("general.member_id")%> :</strong></label>
          <label class="col-xs-3 box"><%= label_tag :player_member_id,@player.member_id, :id => "player_member_id" %></label>
        </div>
        <div class="row">
          <label class="col-xs-3 box"><strong><%= t("general.card_id")%> :</strong></label>
          <label class="col-xs-3 box"><%= label_tag :player_card_id,@player.card_id, :id => "player_card_id" %></label>
        </div>
        <div class="row">
          <label class="col-xs-3 box"><strong><%= t("general.status")%> :</strong></label>
          <label class="col-xs-3 box">
            <span class="badge <%= @player.account_locked? ? "bg-color-red" : "bg-color-greenLight"  %>">
              <%= label_tag :player_status, t("player_status.#{@player.status}"), :id => "player_status" %>
            </span>
          </label>
        </div>
        <%= content %>
        </br>
        <div class="widget-footer text-left">
          <%= footer%>
        </div>
      </div>
    </div>
  </div>
</article>
